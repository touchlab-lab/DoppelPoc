<assembly>
  <id>samples</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory/>
      <directory>${project.build.testOutputDirectory}</directory>
      <includes>
        <include>org/easymock/samples/**</include>
      </includes>      
    </fileSet>
    <fileSet>
      <outputDirectory/>
      <directory>${basedir}/src/samples/java</directory>      
    </fileSet>
    <fileSet>
      <outputDirectory>META-INF</outputDirectory>
      <directory>${project.basedir}</directory>
      <includes>
        <include>LICENSE.txt</include>
      </includes>
    </fileSet>        
  </fileSets>
</assembly>